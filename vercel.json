{
  "version": 2,
  "name": "my-project",
  "builds": [
    {
      "src": "app.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/api/(.*)", "dest": "app.js" },
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "functions": {
    "api": {
      "handler": "app.js"
    }
  },
  "env": {
    "MY_ENV_VAR": "value"
  }
}
